<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup Label="Common">
    <Company>Xeinaemm Consulting</Company>
    <Authors>$(Company)</Authors>
    <Copyright>Copyright © $(Company) $([System.DateTime]::Now.Year)</Copyright>
    <Trademark>$(Company)™</Trademark>
    <Product>$(Company) Projects</Product>
  </PropertyGroup>

  <Choose>
    <When Condition="!Exists('$(MSBuildProjectDirectory)\packages.config')">
      
      <PropertyGroup>
        <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
      </PropertyGroup>

      <ItemGroup>
        <PackageReference Include="Xeinaemm.Analyzer" Version="1.0.0" PrivateAssets="All" />
      </ItemGroup>
      
    </When>
  </Choose>
  
  <PropertyGroup>
    <CodeAnalysisRuleSet>..\..\.msbuild\Xeinaemm.ruleset</CodeAnalysisRuleSet>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  
  <ItemGroup>
    <AdditionalFiles Include="..\..\.msbuild\stylecop.json" Visible="false" />
    <Compile Include="..\..\.msbuild\GlobalSuppressions.cs" Visible="false" />
    <None Include="..\..\.msbuild\Xeinaemm.ruleset" Visible="false" />
    <None Include="..\..\.msbuild\.editorconfig" Visible="false" />
  </ItemGroup>

</Project>